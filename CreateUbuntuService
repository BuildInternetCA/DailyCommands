
sudo chmod +x ./YourAppExecutable

sudo nano /etc/systemd/system/BuildInternetAdmin.service



[Unit]
Description=My .NET Application Service
After=network.target

[Service]
WorkingDirectory=/var/www/BuildInternetAdmin
ExecStart=/var/www/BuildInternetAdmin/BuildInternetAdmin.dll
Restart=always 
RestartSec=10 
User=www-data
Group=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
# Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false # Optional: Disable telemetry

[Install]
WantedBy=multi-user.target



sudo systemctl daemon-reload


sudo systemctl start BuildInternetAdmin.service


sudo systemctl enable BuildInternetAdmin.service
